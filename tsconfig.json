{
  "compilerOptions": {
    /* =====================
       BASIC
    ===================== */
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "jsx": "react-jsx",
    /* =====================
       MODULE & RESOLUTION
    ===================== */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    /* =====================
       STRICTNESS
    ===================== */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    /* =====================
       NEXT.JS / TS SAFETY
    ===================== */
    "isolatedModules": true,
    "resolveJsonModule": true,
    "incremental": true,
    /* =====================
       PATH ALIAS (PENTING)
    ===================== */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    /* =====================
       TYPES (PRISMA, NODE)
    ===================== */
    "types": [
      "node"
    ],
    /* =====================
       NEXT.JS PLUGIN
    ===================== */
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true
  },
  /* =====================
     INCLUDE / EXCLUDE
  ===================== */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
